@using LibrarySystem.Web.Models.Departments
@model DepartmentListViewModel
@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Departments/Index.js"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Departments")</h1>
            </div>
            <div class="col-sm-6">
                @*                <a href="javascript:;" data-toggle="modal" data-target="#UserCreateModal" class="btn bg-blue float-sm-right">
                <i class="fa fa-plus-square"></i>
                @L("Create")
                </a>*@
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                                <form asp-controller="Departments" asp-action="Index" method="get">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Search department" name="SearchString">
                                        <div class="input-group-append">
                                            
                                            <button type="submit" class="btn btn-outline-primary" type="button"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-md-6">

                                    <a c class="btn bg-blue float-sm-right" asp-controller="Departments" asp-action="CreateOrEditDepartments">
                                    <i class="fa fa-plus-square"></i>
                                    @*<i class="fas fa-user-edit"></i> *@
                                    @L("CreateDepartment")
                                </a>
                                @*@await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")*@
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="DepartmentsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("Name")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var department in Model.Departments)
                                    {
                                        <tr>
                                            <td>@department?.Name</td>
                                            <td>
                                                <button type="button" class="btn btn-primary edite-button edit-dept" data-dept-id="@department.Id">@L("Edit")</button>
                                                <button type="button" class="btn btn-danger delete-button delete-dept" data-dept-id="@department.Id" data-dept-name="@department.Name">@L("Delete")</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
