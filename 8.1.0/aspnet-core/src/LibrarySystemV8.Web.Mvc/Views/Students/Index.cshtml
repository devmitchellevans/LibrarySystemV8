@using LibrarySystem.Web.Models.Students
@using System.Linq
@model StudentListViewModel
@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/Students/Index.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Students")</h1>
            </div>
            <div class="col-sm-6">
                @*                <a href="javascript:;" data-toggle="modal" data-target="#UserCreateModal" class="btn bg-blue float-sm-right">
                <i class="fa fa-plus-square"></i>
                @L("Create")
                </a>*@
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                              
                                    <a c class="btn bg-blue float-sm-right" asp-controller="Students" asp-action="CreateOrEditStudents">
                                    <i class="fa fa-plus-square"></i>
                                    @*<i class="fas fa-user-edit"></i> *@
                                    @L("CreateStudent")
                                </a>
                                @*@await Html.PartialAsync("~/Views/Users/Index.AdvancedSearch.cshtml")*@
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="StudentsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>@L("Name")</th>
                                        <th>@L("Contact")</th>
                                        <th>@L("EmailAddress")</th>
                                        <th>@L("DepartmentId")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student?.StudentName</td>
                                            <td>@student?.StudentContactNumber</td>
                                            <td>@student?.StudentEmail</td>
                                            <td>@student?.DepartmentFk?.Name</td>
                                            

                                            <td>
                                                <button type="button" class="btn btn-primary edite-button edit-stud" data-stud-id="@student.Id">@L("Edit")</button>
                                                <button type="button" class="btn btn-danger delete-button delete-stud" data-stud-id="@student.Id" data-stud-name="@student.StudentName">@L("Delete")</button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>