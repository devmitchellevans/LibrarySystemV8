@using LibrarySystemV8.Web.Models.BookCategories
@model CreateOrEditBookCategoryViewModel
@section scripts{
    <environment names="Development">
        <script src="~/view-resources/Views/BookCategories/CreateOrEditBookCategory.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
          @L("CreateOrEditBookCategory")
          
        </div>
    </div>
</section>

<section class="content">
    <form name="bookCategoryCreateForm" id="bookCategoryCreateForm" role="form" class="form-horizontal">
            <div class="modal-body">
                <div class="tab-content mt-4">
                    <div role="tabpanel" class="tab-pane container active">
                    <input type="hidden" name="Id" value="@Model?.Id" data-bookCat-id />
                        <div class="form-group row required">
                            <label class="col-md-3 col-form-label">@L("Name")</label>
                            <div class="col-md-9">
                            <input type="text" class="form-control" name="Name" value="@Model?.Name" data-bookCat-name />
                            </div>
                        </div>

                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Department")</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.DepartmentId, Model.Departments.Select(d => new SelectListItem {Text = d.Name, Value = d.Id.ToString()}), "Select Department", new { @class = "form-control"})
                        </div>
                    </div>
@*                    <!-- Default dropright button -->
                    <div class="btn-group dropright" name="DepartmentId">
                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" name="DepartmentId"  data-existing-dept-name>
                            Select Department
                        </button>
                        <div class="dropdown-menu" name="DepartmentId">
                            <!-- Dropdown menu links -->
                            @foreach(var departments in Model.Departments){
                            <a class="dropdown-item" name="DepartmentId" value="@departments.Id">@departments?.Name</a>
                            }
                        </div>
                    </div>*@
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label" for="CreateOrEditBookCategoryIsActive">@L("IsActive")</label>



                            <div class="col-md-9">
                                <input type="checkbox" name="IsActive" value="true" id="CreateOrEditBookCategoryIsActive" checked />
                            </div>
                        </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-default cancel-button" name="cancel" id="cancel">Cancel</button>
                        <button type="submit" class="btn btn-primary save-button" name="submit" id="submit">Submit </button>
                    </div>
                    </div>
                </div>
            </div>
        </form>
</section>
