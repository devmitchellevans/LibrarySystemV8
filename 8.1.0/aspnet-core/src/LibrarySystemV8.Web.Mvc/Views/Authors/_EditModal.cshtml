
@using LibrarySystemV8.Web.Models.Common.Modals
@using LibrarySystem.Web.Models.Authors
@model EditAuthorModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditAuthor")))
<form name="AuthorEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Author.Id" />
    <div class="modal-body">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" role="tab" href="#edit-author-details">@L("AuthorDetails")</a>
            </li>
        </ul>
        <div class="tab-content mt-4">
            <div role="tabpanel" class="tab-pane container active" id="edit-author-details">
                <div class="form-group row required">
                    <label class="col-md-3 col-form-label" for="name">@L("Name")</label>
                    <div class="col-md-9">
                        <input id="name" type="text" class="form-control" name="Name" value="@Model.Author.Name" required>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-3 col-form-label" for="IsActive">@L("IsActive")</label>
                <div class="col-md-9">
                    <input id="IsActive" type="checkbox" name="IsActive" value="true" @(Model.Author.IsActive ? "checked" : "") />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Authors/_EditModal.js" asp-append-version="true"></script>
